#!/bin/sh
#
# ufetch-gentoo - tiny system info for gentoo

## INFO

# user is already defined
host="$(hostname)"
os='Gentoo Linux'
kernel="$(uname -sr)"
uptime="$(uptime -p | sed 's/up //')"
packages="$(ls -d /var/cache/pacman/pkg/*/* | wc -l)"
shell="$(basename "$SHELL")"
wm="$(tail -n 1 "${XDG_CONFIG_HOME}/X11/xinitrc" | cut -d ' ' -f 2)"

## DEFINE COLORS

# probably don't change these
if [ -x "$(command -v tput)" ]; then
	bold="$(tput bold)"
	black="$(tput setaf 0)"
	red="$(tput setaf 1)"
	green="$(tput setaf 2)"
	yellow="$(tput setaf 3)"
	blue="$(tput setaf 4)"
	magenta="$(tput setaf 5)"
	cyan="$(tput setaf 6)"
	white="$(tput setaf 7)"
	reset="$(tput sgr0)"
fi

# you can change these
lc="${reset}${cyan}"				# labels
nc="${reset}${green}"				# user and hostname
ic="${reset}${white}"               # info
c0="${reset}${bold}${cyan}"			# first color
c1="${reset}${cyan}"				# second color

## OUTPUT

cat <<EOF

${c0}    .-----.      ${lc}USER ❯ ${ic}${USER}${reset}
${c0}  .\`    _  \`.    ${lc}OS   ❯ ${ic}${os}${reset}
${c0}  \`.   (${c1}_)   ${c0}\`.  ${lc}KERN ❯ ${ic}${kernel}${reset}
${c0}    \`${c1}.        /  ${lc}UP   ❯ ${ic}${uptime}${reset}
${c1}   .\`       .\`   ${lc}PKGS ❯ ${ic}${packages}${reset}
${c1}  /       .\`     ${lc}SH   ❯ ${ic}${shell}${reset}
${c1}  \____.-\`       ${lc}WM   ❯ ${ic}${wm}${reset}

EOF
